<Window x:Class="BankApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Логин сорудника" Width="250" SizeToContent="Height"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBox Name="tbNameEmployee" Height="50" VerticalContentAlignment="Center" FontSize="20"/>
            <PasswordBox Name="tbPasswordEmployee" Height="50" VerticalContentAlignment="Center" FontSize="20"/>
            <Button Name="btnLoginEmployee" Content="Зайти" Click="On_btnLoginEmployee_Click" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
